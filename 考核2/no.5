#include<stdio.h>
#include<stdlib.h>
int put_stringr(int*arr1,int size1,int*arr2,int size2)
{
    int index1 =0;
    int index2 =0;
    int index =0;                           /*用size来表示数组arr的长度*/
    int*a= v(sizeof(size1+size2));         /*sizeof求字符串的长度 */
    while (index1 <size1&&index2 <size2)
    {
        if (arr1[index1]<arr2[index2])
            a[index++] =arr1[index1++];
        else
            a[index++] =arr2[index2++];
    }
    if (arr1[index1] != "Null")      /*判断数组arr是否为空*/
        a[index++]=arr1[index1++];
    if (arr2[index2] != "Null")
        a[index++]=arr2[index2++];
    return a;

}
int main(void)
{
    int *p;
    int size1=0;
    int size2=0;
    int arr1[] ={1,2,3,0,0,0};
    int arr2[] ={2,5,6};
    size1 =sizeof(arr1);
    size2 =sizeof(arr2);
    int num=size1+size2;
    int b[20]={0};
    p=put_stringr(arr1,size1,arr2,size2);
    for (int i=0;i<num-1;i++)
    {
        b[i]=*p++;
        printf("%d",b[i]);
    }
    printf("\n");
    system("pause");
    return 0;
}
