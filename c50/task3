#include<stdio.h>
int main(void)
{                                    /*存疑*/
    int i,j,len;
    puts ("打印一个沙漏型。");
    printf ("总行数：");
    scanf ("%d",&len);

    for (i=1;i<=len/2;i++){
        for (j=1;j<=i;j++)
            putchar('*');
            putchar('/n');
    }
    for (i=len/2;i<=len;i++){
        for (j=len/2;j<=i;j++)
            putchar('*');
    }
    return 0;
}
